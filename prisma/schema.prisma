  DRAFT       // –ß–µ—Ä–Ω–æ–≤–∏–∫
}

enum BookingStatus {
  PENDING     // –û–∂–∏–¥–∞–µ—Ç –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è
  CONFIRMED   // –ü–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–æ
  CANCELLED   // –û—Ç–º–µ–Ω–µ–Ω–æ
  COMPLETED   // –ó–∞–≤–µ—Ä—à–µ–Ω–æ
}

enum ContractStatus {
