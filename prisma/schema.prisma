  okbData       Json?    // –î–∞–Ω–Ω—ã–µ –û–ö–ë
  fsspData      Json?    // –î–∞–Ω–Ω—ã–µ –§–°–°–ü
  
  // –°–≤—è–∑–∏
  realtorId     String
  realtor       User     @relation("RealtorScorings", fields: [realtorId], references: [id])
  
  contractId    String? @unique
  contract      Contract? @relation(fields: [contractId], references: [id])
  
  // –û–±—Ä–∞—Ç–Ω—ã–µ —Å–≤—è–∑–∏
  insurances    RentalInsurance[]
  escrows       EscrowAccount[] @relation("ScoringEscrows")
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("tenant_scorings")
}

// üìã –û–ø–∏—Å—å –∏–º—É—â–µ—Å—Ç–≤–∞
model PropertyInventory {
  id            String   @id @default(cuid())
  
  // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ —Å–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞–Ω–Ω–∞—è –æ–ø–∏—Å—å
  items         Json     // –°–ø–∏—Å–æ–∫ –ø—Ä–µ–¥–º–µ—Ç–æ–≤ —Å –æ–ø–∏—Å–∞–Ω–∏—è–º–∏
  totalValue    Decimal  // –û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å
  aiAnalysis    Json?    // –†–µ–∑—É–ª—å—Ç–∞—Ç—ã –ò–ò-–∞–Ω–∞–ª–∏–∑–∞
  
  // –§–æ—Ç–æ–≥—Ä–∞—Ñ–∏–∏ –¥–ª—è –∞–Ω–∞–ª–∏–∑–∞
  photos        String[] // URLs —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏–π
  
  // –°–≤—è–∑–∏
  propertyId    String
  property      Property @relation(fields: [propertyId], references: [id])
  
  contractId    String? @unique
  contract      Contract? @relation(fields: [contractId], references: [id])
  
