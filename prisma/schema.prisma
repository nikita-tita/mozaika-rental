generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  REALTOR     // –†–∏–µ–ª—Ç–æ—Ä
  ADMIN       // –ê–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä
}

enum PropertyType {
  APARTMENT   // –ö–≤–∞—Ä—Ç–∏—Ä–∞
  HOUSE       // –î–æ–º
  STUDIO      // –°—Ç—É–¥–∏—è
  COMMERCIAL  // –ö–æ–º–º–µ—Ä—á–µ—Å–∫–∞—è –Ω–µ–¥–≤–∏–∂–∏–º–æ—Å—Ç—å
  ROOM        // –ö–æ–º–Ω–∞—Ç–∞
}

enum PropertyStatus {
